@model IEnumerable<MessageLogWebApplication.Models.Server>

@{
    ViewData["Title"] = "Servers";
}

<h2>Servers</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<p>
    <a asp-action="CreateRandom">Create Random</a>
</p>
<form asp-controller="Server" asp-action="Index" method="get">
    <button class="collapsible" type="button">Search options</button>
    <div class="content">
        <br />
        <b>
            Text: <input type="text" name="SearchString"><br /><br />
            Includes messages:<br /><br />
            &nbsp;&nbsp;&nbsp;From (Date): <input type="datetime-local" name="FirstDate">&nbsp;
            to (Date): <input type="datetime-local" name="SecondDate"><br /><br />
            &nbsp;&nbsp;&nbsp;Min Load: <input type="number" name="MinLoad">
        </b>
    </div>
    <br />
    <input type="submit" value="Search" />
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReloadDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReloadDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<script>
    var coll = document.getElementsByClassName("collapsible");
    var i;

    for (i = 0; i < coll.length; i++) {
        coll[i].addEventListener("click", function () {
            this.classList.toggle("active");
            var content = this.nextElementSibling;
            if (content.style.maxHeight) {
                content.style.maxHeight = null;
            } else {
                content.style.maxHeight = content.scrollHeight + "px";
            }
        });
    }
</script>
